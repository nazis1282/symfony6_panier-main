{% extends 'base.html.twig' %}

{% block title %}PanierDeSymfony | Contact{% endblock %}

{% block body %}

<div class="container profil">
     {# affichage de message de flasheses #}
     {% for success in app.flashes('success') %}
        <div class="col-md-6 text-center mx-auto">
            <div class="alert alert-success mt-3" role="alert">{{ success }}</div> 
        </div>  
    {% endfor %}
    <h3 class="text-center my-5">Contacter nous</h3>
    <div class="col-lg-6 col-md-10 mx-auto">
        {{ form_start(form)}}
            {{ form_row(form.civilite)}}
            {{ form_row(form.nom)}}
            {{ form_row(form.prenom)}}
            {{ form_row(form.email)}}
            {{ form_row(form.object)}}
            {{ form_row(form.message)}}
            <div class="">
                <button type="submit" class="btn_contact mb-3">Envoyer</button>
            </div>
        {{form_end(form)}}

    </div>

</div>
{% endblock %}
