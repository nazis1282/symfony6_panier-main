{% extends "base_admin.html.twig" %}

{% block title %}
    Utilisateurs
{% endblock %}

{% block body %}
<div class="container text-center">
    <h2>Utilisateurs</h2>
    <table class="table border mt-5">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Adresse</th>
            <th>Code postal</th>
            <th>Ville</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.address }}</td>
            <td>{{ user.zipcode }}</td>
            <td>{{ user.city }}</td>
            <td>{{ user.createdAt|date('d/m/Y à H:i:s', 'Europe/Paris') }}</td>
            <td><a class="btn btn-success" href="#">Modifier</a></td>
        </tr>
        
        {% endfor %}


    </table>
</div>
{% endblock %}