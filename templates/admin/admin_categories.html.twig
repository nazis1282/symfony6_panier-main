{% extends "base_admin.html.twig" %}

{% block title %}
    Categories
{% endblock %}

{% block body %}
<div class="container text-center">
    <h2 class="text-center mb-3">Categories</h2>
{# affichage des categories de BDD #}
<table class="table-bordered text-center mx-auto col-md-6">
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Action</th>
    </tr>
    {% for cat in categories %}
    <tr>
        <td>{{ cat.id}}</td>
        <td>{{ cat.name}}</td>
        <td></td>
    </tr>
        
    {% endfor %}





</table>

    <a class="btn btn-success mt-5" href="{{ path('categorie_edit')}}">Ajouter la nouvelle categorie</a>
</div>
{% endblock %}