                <td>{{ order.id }}</td>
                <td>{{ order.users.id }}</td>
                <td>{{ order.montant }} DT</td>
                <td>{{ order.createdAt|date('d/m/Y Ã  H:i:s', 'Europe/Paris') }}</td>
                <td><a class="btn btn-success" href="{{ path('admin_details', {'id' : order.id})}}">Voir</a></td>
            </tr>
            
            {% endfor %}
    
    
        </table>
    </div>
    {% endblock %}