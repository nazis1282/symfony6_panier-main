{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5">Inscription</h1>

    {{ form_start(registrationForm) }}
     <div class="row col-md-8 mx-auto d-flex  mt-5">
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.lastname) }}</div>
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.firstname) }}</div>
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.email) }}</div>
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.address) }}</div>
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.zipcode) }}</div>
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.city) }}</div>
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.password, {
            label: 'Mot de passe'
        }) }}</div>
        <div class="col-md-8 mx-auto">{{ form_row(registrationForm.RGPDConsent) }}</div>
        <div class="col-md-8mx-auto text-center" ><button type="submit" class="btn_register mx-auto my-3 col-lg-3 col-md-6">S'enregistrer</button></div>
    {{ form_end(registrationForm) }}
    </div>


</div>
{% endblock %}
