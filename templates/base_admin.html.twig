<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} {% endblock %}</title>

        {# balise meta #}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="Content-Type" content="UTF-8">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {# CSS only #}
        <link rel="stylesheet" type='text/css' href="{{ asset('CSS/admin.css')}}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    </head>
    <body>
   
        <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
           <a href="{{ path('home')}}" class="btn btn-secondary">
            Revenir à l'accueil
            </a>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a href="{{ path('admin')}}" class="nav-link px-2 link-dark">Accueil</a></li>
                <li><a href="{{ path('admin_produits')}}" class="nav-link px-2 link-dark">Produits</a></li>
                <li><a href="{{ path('admin_categories')}}" class="nav-link px-2 link-dark">Categories</a></li>
                <li><a href="{{ path('admin_contact')}}" class="nav-link px-2 link-dark"><i class="bi bi-envelope-at"></i></a></li>
                <li><a href="{{ path('admin_images')}}" class="nav-link px-2 link-dark"><i class="bi bi-images"></i></a></li>
                <li><a href="{{ path('admin_users')}}" class="nav-link px-2 link-dark"><i class="bi bi-people"></i></a></li>
                <li><a href="{{ path('admin_commandes')}}" class="nav-link px-2 link-dark"><i class="bi bi-basket"></i></a></li>
                {# <li><a href="#" class="nav-link px-2 link-dark">About</a></li> #}
            </ul>

            <ul class="nav d-flex justify-content-center  mb-2 mb-md-0">
            
        {# condition d'affichage des lien connexion ou déconnexion #}
            {% if app.user %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="" class="nav-link link-dark px-2">Administration</a></li> 
                {% endif %}

                <li><a class="nav-link link-dark px-2" href="{{path('app_logout')}}"><p class="nav-titer">Déconnexion</p></a></li>
                <li><a href="{{ path('profile')}}" class="nav-link link-dark px-2"><i class="bi bi-person-circle" style="font-size: 1.5rem"></i></a></li>
            {% else %}

                <li><a class="nav-link link-dark px-2" href="{{path('app_register')}}">Inscription</a></li>
                
                <li><a class="nav-link link-dark px-2" href="{{path('app_login')}}">Connexion</a></li>

            {% endif %}

               
                
            </ul>
           
        </header>
        </div>

        <main>
            <div class="container">
                {% block body %}
                {% endblock %}
            </div>
            
        </main>
        <footer>
        
        </footer>

    
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    {# integration de JS de bootsrap #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script> 
    </body>
</html>
