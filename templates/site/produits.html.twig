{% extends "base.html.twig" %}

{% block title %}
    Produits
{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center mt-5">Nos produits</h2>
    <div class="container d-flex flex-wrap justify-content-around my-5">

        {% for produit in products %}
        <div class="col-md-4 col-lg-3 text-center cadre_produit mx-2 my-3">
            <div><h4 class="my-2">{{ produit.name}}</h4></div>
                <div class="">
                    <img src="{{ asset('uploads/images/produits/' ~ produit.image)}}" width="60%" alt="{{ produit.name}}">
                </div>
                <div class="mt-3"><p> Prix: {{ produit.price}} DT</p></div>
            {# route vers détails, atribut est "id" #}
                <div class="mb-3"><a href="{{ path('details', {'id' : produit.id})}}"><button class="btn">Voir les détails</button></a></div>
        </div>    
        {% endfor %}
    </div>
</div> 
{% endblock %}