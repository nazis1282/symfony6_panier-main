<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Ecommerce Project{% endblock %}</title>

        {% block stylesheets %}
    
        {% endblock %}
        {# CSS only #}
        <link rel="stylesheet" type='text/css' href="{{ asset('css/site.css')}}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
        <link type="image/gif" rel="icon" href="{{ asset('../uploads/logo/pngeng.png')}}">
    </head>
    <body>
        <header class="nav_header d-flex align-items-center  justify-content-around border-bottom">
            <a href="{{ path('home')}}" class="d-flex align-items-center col-md-2 my-1 text-decoration-none">
                <img id="logo_img" src="{{ asset('../uploads/logo/pngegg.png')}}" width="70" alt="logo">
            </a>
            {# humburger  #}
            <nav id="hamnav">
                <label for="hamburger">
                    <div class="menu-btn">
                        <div class="menu-btn_burger"></div>
                    </div></label>
                <input type="checkbox" id="hamburger"/>
    
                <!-- items de menu-->
                <div id="menu_items">
                    <a href="{{ path('home')}}">A propos...</a>
                    <a href="{{ path('produits')}}">Produits</a>
                    <a href="{{ path('app_contact')}}">Contacter</a>
                </div>
            </nav>
            {#  3 partie de navigation #}
            <ul class="nav d-flex justify-content-center mb-md-0">
                <li><a href="{{ path('cart')}}" class="nav-link link-dark px-2"><i class="bi bi-cart3" style="font-size: 1.5rem"></i></a></li>
            {# condition d'affichage des lien connexion ou déconnexion #}
            {% if app.user %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin')}}" class="nav-link link-dark px-2">Administration</a></li> 
                {% endif %}
                <li><a href="{{ path('profile')}}" class="nav-link link-dark px-2"><i class="bi bi-person-circle" style="font-size: 1.5rem"></i></a></li> 
                <li><a class="nav-link link-dark px-2" href="{{path('app_logout')}}"><p class="nav-titer"><i class="bi bi-box-arrow-right" style="font-size: 1.5rem"></i></p></a></li> 
            {% else %}

                <li><a class="nav-link link-dark px-2" href="{{path('app_register')}}"><i class="bi bi-pencil-square" style="font-size: 1.5rem"></i></a></li>
                
                <li><a class="nav-link link-dark px-2" href="{{path('app_login')}}"><i class="bi bi-box-arrow-in-right" style="font-size: 1.5rem"></i></a></li>
            {% endif %}
            </ul>   
        </header>
        <main>
                {% block body %}
                {% endblock %}
        </main>
        <footer class="nav_footer d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-2 border-top">
            <div class="mx-auto">
                    <small class="mb-3 mx-3 text-dark">&copy; 2023 - Firas Ben Hariz - E-commerce - tous droits reservés</small>
            </div>
        </footer>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <script src="{{ asset('js/script.js')}}"></script> 
    {# integration de JS de bootsrap #}
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

    </body>
</html>
